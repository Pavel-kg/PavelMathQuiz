<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:orientation="vertical"
    android:padding="11dp"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textViewMathQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Math Quiz"
        android:textColor="#030FFC"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer: "
            android:textColor="#BA03FC"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextUserAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#ffffe3"
            android:gravity="right"
            android:hint="0"
            android:inputType="numberDecimal"
            android:textSize="28sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#E3F2FD">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question: "
            android:textColor="#BA03FC"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/textViewGenerateQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:hint="0+0"
            android:inputType="text"
            android:textSize="30sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:padding="15dp"
            android:text="1"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:padding="15dp"
            android:text="2"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="15dp"
            android:text="3"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_columnWeight="0.2"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:text="4"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnNumber5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:text="5"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnNumber6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnNumber7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:layout_margin="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="7"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnNumber8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:text="8"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnNumber9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="2"
            android:layout_column="2"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:text="9"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp" />



        <Button
            android:id="@+id/btnPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:text="."
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp"
            android:layout_columnWeight="0.2"
            android:layout_row="3"
            android:layout_column="0"
            />


        <Button
            android:id="@+id/btnNumberZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:padding="15dp"
            android:text="0"
            android:layout_margin="5dp"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:padding="15dp"
            android:text="-"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_columnWeight="0.2"
            android:layout_row="3"
            android:layout_column="2"/>
        <Button
            android:id="@+id/btnBackspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:padding="15dp"
            android:text="backspace"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:layout_columnWeight="0.2"
            android:layout_row="4"
            android:layout_column="0"
            android:textStyle="bold"
            android:onClick="backspace"
            />

        <TextView
            android:id="@+id/textViewShowAnswer"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_columnWeight="0.2"
            android:gravity="center_horizontal"
            android:hint="Message box"
            android:text=""
            android:textColor="#F10766"
            android:textSize="25sp" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            android:padding="2dp"
            android:text="Generate"
            android:layout_margin="5dp"
            android:textSize="20sp"
            />


        <Button
            android:id="@+id/btnValidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="0"
            android:layout_column="1"
           android:padding="2dp"
            android:text="Validate"
            android:layout_margin="5dp"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            android:textSize="20sp"
            />


        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.2"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="2dp"
            android:text="Clear"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:textStyle="bold"
             />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:text="Score"
            android:textSize="20sp"

            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            android:padding="2dp"
            android:layout_margin="8dp"
            android:text="Finish"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>